<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="RegisterActivity2"
            type="com.tinderbusiness.activities.Register2Activity" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activities.Register2Activity"
            android:background="@color/white"
            android:padding="12dp">

            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/avatar"/>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/businesstinderlogo" />

            <TextView
                android:id="@+id/txvRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:text="CREATION"
                android:textAllCaps="true"
                android:textColor="@color/txt_grey"
                android:theme="@style/FontSizeLarge"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/lytIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="45dp"
                android:layout_below="@+id/txvRegistration"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lytRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/white_circle"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/txt_grey"
                        android:text="register"
                        android:theme="@style/FontSizeMedium"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:background="@color/txt_grey"/>

                <LinearLayout
                    android:id="@+id/lytCreate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/red_circle"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/txt_grey"
                        android:text="create"
                        android:theme="@style/FontSizeMedium"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:background="@color/txt_grey"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/white_circle"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/txt_grey"
                        android:text="start"
                        android:theme="@style/FontSizeMedium"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lytProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_below="@+id/lytIndicator"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/FontSizeMedium"
                    android:textColor="@color/txt_grey"
                    android:text="Name: Michael Jackson"/>

                <TextView
                    android:id="@+id/txvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:theme="@style/FontSizeMedium"
                    android:textColor="@color/txt_grey"
                    android:text="Email: michael.jackson@tmail.com"/>

                <TextView
                    android:id="@+id/txvCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:theme="@style/FontSizeMedium"
                    android:textColor="@color/txt_grey"
                    android:text="Country: Singapore"/>

                <TextView
                    android:id="@+id/txvIndustry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:theme="@style/FontSizeMedium"
                    android:textColor="@color/txt_grey"
                    android:text="Industry: Accommodation Food Services"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lytProfile"
                android:layout_marginStart="12dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txvProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Profile(2)"
                    android:textColor="@color/txt_grey"
                    android:theme="@style/FontSizeLarge"/>

                <TextView
                    android:id="@+id/txvCollaborations"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/stroke_grey"
                    android:hint="Types of Collaborations *"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/txt_grey"
                    android:theme="@style/FontSizeMedium"
                    app:drawableEndCompat="@drawable/ic_arrow_down" />

                <TextView
                    android:id="@+id/txvInterestedIndustry"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/stroke_grey"
                    android:hint="Interested Industry *"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/txt_grey"
                    android:theme="@style/FontSizeMedium"
                    app:drawableEndCompat="@drawable/ic_arrow_down" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtBudget"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/stroke_grey"
                        android:hint="Budget (USD) *"
                        android:gravity="center"
                        android:paddingStart="12dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="4dp"
                        android:paddingBottom="12dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/txt_grey"
                        android:inputType="number"
                        android:theme="@style/FontSizeMedium"
                        android:imeOptions="actionDone"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/txvMin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="oK"
                            android:textColor="@color/txt_grey"
                            android:theme="@style/FontSizeSmall"/>

                        <TextView
                            android:id="@+id/txvMax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="8dp"
                            android:text="100K"
                            android:textColor="@color/txt_grey"
                            android:theme="@style/FontSizeSmall"/>

                        <SeekBar
                            android:id="@+id/seekBudget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:max="100"
                            android:progress="0"
                            android:thumb="@drawable/thumb_image"/>
                    </RelativeLayout>

                </LinearLayout>

                <EditText
                    android:id="@+id/edtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/stroke_grey"
                    android:gravity="top|left"
                    android:hint="Description (Optional)\nLimit to 150 words only"
                    android:lines="10"
                    android:maxLines="10"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/txt_grey"
                    android:theme="@style/FontSizeMedium"
                    android:maxLength="150"
                    tools:ignore="RtlHardcoded" />

                <Button
                    android:id="@+id/btnAddProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/button_dark_green"
                    android:text="Add Profile"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:theme="@style/FontSizeLarge"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btnAddBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/button_dark_green"
                    android:text="Add Background Color"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:theme="@style/FontSizeLarge"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/lytTerms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="By checking this box, you are agreeing to our"
                        android:textColor="@color/txt_grey"
                        android:theme="@style/FontSizeMedium"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/checkTerms"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="terms of service"
                            android:textColor="@color/txt_grey"
                            android:theme="@style/FontSizeMedium"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/checkPolicy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="data policy"
                            android:textColor="@color/txt_grey"
                            android:theme="@style/FontSizeMedium"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btnStarted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_green"
                    android:text="Get Started"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:theme="@style/FontSizeLarge"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/lytContinue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/btnBack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_green"
                        android:text="Back"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:theme="@style/FontSizeLarge"/>

                    <Button
                        android:id="@+id/btnContinue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_green"
                        android:text="Continue"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:theme="@style/FontSizeLarge"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</layout>