<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:background="@drawable/round_chat_now"
        >

        <ImageView
            android:id="@+id/imvClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="8dp"
            android:src="@drawable/ic_close"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boom"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="You"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:theme="@style/FontSizeMedium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Got"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:theme="@style/FontSizeLarge"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A Match"
                android:layout_marginTop="4dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:theme="@style/FontSizeMedium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Lets chat"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:theme="@style/FontSizeMedium"/>

            <Button
                android:id="@+id/btnChatNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="30dp"
                android:paddingStart="45dp"
                android:paddingEnd="45dp"
                android:text="Now"
                android:theme="@style/FontSizeLarge"
                android:textColor="@color/txt_grey"
                android:background="@drawable/stroke_grey"/>

        </LinearLayout>
    </LinearLayout>

</layout>